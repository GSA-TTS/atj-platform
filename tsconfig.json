{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "**/*/lib", "**/*/dist"],
  "references": [
    {
      "path": "./packages/core/tsconfig.json"
    },
    {
      "path": "./packages/cli/tsconfig.json"
    }
  ]
}
