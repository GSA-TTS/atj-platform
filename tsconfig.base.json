{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": true,

    "strict": true,
    "target": "ESNext"
  }
}
