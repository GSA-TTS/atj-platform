    },
    "./testing": {
      "import": "./dist/esm/testing.js",
      "require": "./dist/cjs/testing.js",
      "types": "./dist/types/testing.d.ts"
    }
  },
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@atj/common": "workspace:*",
    "@types/pg": "^8.11.6",
    "better-sqlite3": "^11.1.2",
